{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total People Affected by Disasters Sub Groups Over Time",
  "data": {
    "url": "https://raw.githubusercontent.com/isaack00/3179/main/disaster_data.csv"
  },
  "params": [
    {
      "name": "Group_Selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Meteorological",
          "Geophysical",
          "Hydrological",
          "Climatological",
          "Biological"
        ],
        "labels": [
          "Show All Subgroups",
          "Meteorological",
          "Geophysical",
          "Hydrological",
          "Climatological",
          "Biological"
        ],
        "name": "Filter by Disaster Subgroup: "
      }
    }
  ],
  "width": 900,
  "height": 400,
  "transform": [
    {
      "calculate": "toDate(datum['Start Year'], '%Y')",
      "as": "YearAsDate"
    },
    {
      "calculate": "toNumber(datum['Total Affected'])",
      "as": "AffectedNumeric"
    },
    {
      "filter": "isValid(datum.YearAsDate) && isValid(datum.AffectedNumeric)"
    },
    {
      "filter": "Group_Selection == null || datum['Disaster Subgroup'] == Group_Selection"
    }
  ],
  "mark": {"type": "line", "point": true},
  "encoding": {
    "x": {
      "field": "YearAsDate",
      "type": "temporal",
      "axis": {"title": "Year", "format": "%Y"}
    },
    "y": {
      "field": "AffectedNumeric",
      "type": "quantitative",
      "aggregate": "sum",
      "title": "Total People Affected",
      "axis": {"format": ".2s"}
    },
    "color": {
      "field": "Disaster Subgroup",
      "type": "nominal",
      "title": "Disaster Subgroup",
      "scale": {
        "domain": [
          "Meteorological",
          "Geophysical",
          "Hydrological",
          "Climatological",
          "Biological"
        ],
        "range": [
          "#4c78a8",
          "#f58518",
          "#e45756",
          "#72b7b2",
          "#54a24b"
        ]
      }
    },
    "tooltip": [
      {
        "field": "YearAsDate",
        "type": "temporal",
        "title": "Year",
        "format": "%Y"
      },
      {
        "field": "Disaster Subgroup",
        "type": "nominal"
      },
      {
        "field": "AffectedNumeric",
        "type": "quantitative",
        "aggregate": "sum",
        "title": "Total Affected",
        "format": ","
      }
    ]
  }
}

