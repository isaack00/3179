{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total Deaths by Climatological Events",
  "data": {
    "url": "https://raw.githubusercontent.com/isaack00/3179/main/disaster_data.csv"
  },
  "width": 150,
  "height": 150,
  "transform": [
    {
      "filter": "datum['Disaster Subgroup'] == 'Climatological'"
    },
    {
      "calculate": "toNumber(datum['Total Deaths'])",
      "as": "DeathsNumeric"
    },
    {
      "filter": "isValid(datum.DeathsNumeric) && datum.DeathsNumeric > 0"
    }
  ],
  "mark": "arc",
  "encoding": {
    "angle": {
      "field": "DeathsNumeric",
      "type": "quantitative",
      "aggregate": "sum"
    },
    "color": {
      "field": "Disaster Type",
      "type": "nominal",
      "title": "Disaster Type",
      "scale": {
        "domain": ["Drought", "Glacial lake outburst flood", "Wildfire"],
        "range": ["#72b7b2", "#a5d6a7", "#c8e6c9"]
      }
    },
    "tooltip": [
      {
        "field": "Disaster Type",
        "type": "nominal"
      },
      {
        "field": "DeathsNumeric",
        "type": "quantitative",
        "aggregate": "sum",
        "title": "Total Deaths",
        "format": ","
      }
    ]
  }
}

