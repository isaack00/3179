{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Australian Fire Hotspots by Brightness Temperature",
  "projection": {
    "center": [133, -27],
    "scale": 500
  },
  "layer": [
    {
      "data": {
        "url": "world_map.json",
        "format": {"type": "topojson", "feature": "world_map"}
      },
      "mark": {"type": "geoshape", "stroke": "black", "fill":"forestgreen", "strokeWidth": 1}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/isaack00/3179/main/fire_australia.csv"
      },
      "mark": {"type": "circle", "opacity": 0.5},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "bright_ti4",
          "type": "quantitative",
          "title": "Brightness (Kelvin)",
          "scale": {
            "domain": [208, 367],
            "range": [0.2, 5]
          },
          "legend": null
        },
        "color": {
          "field": "bright_ti4",
          "type": "quantitative",
          "title": "Brightness (Kelvin)",
          "scale": {"range": ["#ffffb2", "#fecc5c", "#fd8d3c", "#f03b20", "#bd0026"]}
        },
        "tooltip": [
          {"field": "acq_date", "type": "ordinal", "title": "Date"},
          {"field": "bright_ti4", "type": "quantitative", "title": "Brightness (K)"}
        ]
      }
    }
  ]
}

